# BacPipes Remote Database Configuration
# Copy this file to .env.remote-db and update with your values

# Remote Database Credentials
REMOTE_DB_PASSWORD=changeme_strong_password

# Remote Grafana Credentials
REMOTE_GRAFANA_PASSWORD=changeme_admin_password

# API Authentication
REMOTE_API_KEY=your-secret-api-key-change-this

# Site Client Configuration (for sites connecting to remote DB)
SITE_NAME=site1
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5435
LOCAL_DB_NAME=bacnet_timeseries
LOCAL_DB_USER=anatoli
LOCAL_DB_PASSWORD=

# Remote API URL (update with actual remote server IP/domain)
REMOTE_API_URL=http://10.0.10.2:8080

# Sync Settings
SYNC_INTERVAL=300  # Seconds (5 minutes)
BATCH_SIZE=1000    # Readings per batch
